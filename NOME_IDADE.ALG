Algoritmo "nome_idade"

Var
 nome: caracter
 data_nascimento,idade: inteiro

Inicio
     Escreval ("digite seu nome")
     Leia (nome)
     
     Escreval ("Qual ano vc nasceu")
     Leia (data_nascimento)
     
     idade <- 2025 - data_nascimento
     
     Escreval ("Olá", nome,"vc tem", idade)
     

Fimalgoritmo